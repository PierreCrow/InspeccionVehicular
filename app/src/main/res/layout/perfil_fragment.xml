<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="14">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:gravity="center">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_account"
                android:layout_marginBottom="50dp">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivBackgroundUserImage"
                    android:layout_marginBottom="0dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">


                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:visibility="gone"/>

                </LinearLayout>


            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_usuarioo" />

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:weightSum="4">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_cultivos"/>


                        <TextView
                            android:id="@+id/titulo_Editar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Mis cultivos"
                            android:textSize="18sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/iricon"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/lineTwo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/lineperfil"
                        android:layout_marginTop="9dp"/>

                    <LinearLayout
                        android:id="@+id/llEditarPerfil"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_editarperfil"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:fontFamily="@font/robotomedium"
                            android:paddingLeft="10dp"
                            android:text="Datos usuario"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/iricon"/>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/lineperfil"
                        android:layout_marginTop="9dp"/>

                    <LinearLayout
                        android:id="@+id/llLogout"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_logout"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Cerrar sesiÃ³n"
                            android:textSize="18sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotomedium"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/iricon"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/lineperfil"
                        android:layout_marginTop="9dp"/>

                </LinearLayout>




            </ScrollView>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>